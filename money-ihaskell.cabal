library
  hs-source-dirs:      src
  exposed-modules:     Money
                     , Money.Prediction
                     , Money.Lens
                     , Money.FilterSort
                     , Money.DB
                     , Money.DB.Types
                     , Money.IHaskell
                     , Money.Plaid
                     , Money.Recurring
