                     , servant-client
                     , servant
                     , safecopy
                     , regex-posix
                     , http-api-data
                     , time
                     , directory
                     , containers
                     , blaze-html
                     , case-insensitive
                     , cereal
                     , aeson
                     , bytestring
                     , text
                     , http-client
                     , http-client-tls
                     , unix
